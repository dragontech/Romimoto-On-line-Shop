<% @body_id = 'product-details' %>

<div id="product-images" class="half fl">
  <%= hook :product_images do %>
  <div id="main-image">
    <%= render 'image' %>
  </div>
  <div id="thumbnails">
    <%= render 'thumbnails', :product => @product %>
  </div>
  <% end %>
</div>

<div class="half fl">
  <h1><%= @product.name %></h1>

  <%= hook :cart_form do %>
    <div id="cart-form">
      <%= render 'cart_form' %>
    </div>
  <% end %>
 
  <div id="product-description">
   <%= hook :product_description do %>
      <%= product_description(@product) rescue t("product_has_no_description") %>
    <% end %>
    <%= hook :product_properties do %>
      <%= render 'properties' %>
    <% end %>
  </div>
</div>

<div id="product-relations">
  <%= render "shared/products", :products => @product.relations.collect{|relation| relation.related_to}, :taxon => @taxon %>
</div>

<%#= render 'taxons' %>

